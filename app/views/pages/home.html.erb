<!DOCTYPE html>
<html>
<head>
  <title>Event and Employee web application</title>
  <%= stylesheet_link_tag 'styles' %>
</head>
<body>
  <header>
    <h1>Event and Employee web application</h1>
    <nav>
      <ul>
        <li><%= link_to 'Home', root_path %></li>
        <li><%= link_to 'Events', events_path %></li>
        <li><%= link_to 'Employees', employees_path %></li>
      </ul>
    </nav>
  </header>

  <main>
    <section class="table-section">
      <h2>Events</h2>
      <table class="sortable-table">
        <thead>
          <tr>
            <th><%= link_to 'Name', events_path(sort_by: 'name') %></th>
            <th><%= link_to 'Date', events_path(sort_by: 'date') %></th>
            <th><%= link_to 'Location', events_path(sort_by: 'location') %></th>
          </tr>
        </thead>
        <tbody>
          <% @events.each do |event| %>
            <tr>
              <td><%= event.name %></td>
              <td><%= event.date %></td>
              <td><%= event.location %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </section>

    <section class="table-section">
      <h2>Employees</h2>
      <table class="sortable-table">
        <thead>
          <tr>
            <th><%= link_to 'Name', employees_path(sort_by: 'name') %></th>
            <th><%= link_to 'Age', employees_path(sort_by: 'age') %></th>
            <th><%= link_to 'Position', employees_path(sort_by: 'position') %></th>
          </tr>
        </thead>
        <tbody>
          <% @employees.each do |employee| %>
            <tr>
              <td><%= employee.name %></td>
              <td><%= employee.age %></td>
              <td><%= employee.position %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </section>
  </main>

  <footer>
    <p>&copy; <%= Time.now.year %> Event and Employee web application.</p>
  </footer>
</body>
</html>
